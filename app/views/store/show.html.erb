<h1>Hello from show</h1>

<p>
    <%= @model.name%>
</p>

<div class ="cards">
    <% @articles.each do |article| %>
        <div class="card">
            <h1>Color: <%=article.color.name %> </h1>
            <h1>Num: <%=article.num%> </h1>
            <p class="price"> <%= number_to_currency(article.price) %> </p>
            <p>Stock: <%=article.stock %> </p>
            <%= button_to 'Add to cart', line_items_path(article_id: article), :mehotd => :post %>

        </div>
    <% end %>
</div>