        <article class="leaderboard__profile">
            <span class="leaderboard__name"> <%= line_item.article.brand.name %> </span>
            <span class="leaderboard__name"> <%= line_item.article.model.name %> <span>$<%= line_item.total_price %></span> </span>
            <span class="leaderboard__value">  NÂº<%= line_item.article.num %> <span><%= line_item.article.color.name %></span></span>
