<%= form_with(model: category) do |form| %>
  <% if category.errors.any? %>
    <%= render 'layouts/errors', errors: category.errors%>
  <% end %>

  <div>
    <%= form.label :name, style: "display: block" %>
    <%= form.text_field :name %>
  </div>

  <div>
    <%= form.label :cod, style: "display: block" %>
    <%= form.number_field :cod %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>
